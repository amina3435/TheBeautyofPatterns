// In this project I built a Magic Eight Ball using control flow in JavaScript.
let userName = "";
userName === "Amina"
  ? console.log("Hello " + userName + "!")
  : console.log("Hello!");
userQuestion = "Will things get better?";
console.log(userQuestion);
let randomNumber = Math.floor(Math.random() * 8);
let eightBall=randomNumber;
switch (eightBall) {
   case 0:
    console.log('It is certain');
    break;
    case 1:
    console.log('It is decidedly so');
    break;
    case 2:
    console.log('You will die anyways');
    break;
    case 3:
    console.log('Cannot predict now');
    break;
    case 4:
    console.log('You can make it better');
    case 5:
    console.log('My sources say YES');
    break;
    case 6:
    console.log('Step by step');
    break;
    case 7:
    console.log('This too shall pass');
    break;
}
console.log(eightBall);
